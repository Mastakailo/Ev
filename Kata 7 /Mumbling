function accum(s) {
let cha = s.toLowerCase().split('');
for (let i = 0; i < s.length ;i++){
  cha[i] = cha[i].toUpperCase() + cha[i].repeat(i);
    }
  return cha.join('-');
}
  //  letters[i] = letters[i].toUpperCase() + letters[i].repeat(i)
